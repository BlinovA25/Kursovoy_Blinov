<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GasStationProg.Resources">

    <Cursor x:Key="UserCursor">
        F:\OOP\GasStationProg_1\GasStationProg_1\Pist.cur
    </Cursor>

    <Style TargetType="Hyperlink" x:Key="HyperLinkStyle_1">
        <Setter Property="Foreground" Value="Black"/>
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"></Condition>
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Foreground" Value="Orange"/>
                </MultiTrigger.Setters>
            </MultiTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBlock" x:Key="headingStyle">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="Button" x:Key="menuButtons">
        <Setter Property="Background" Value="Orange"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="10, 0, 10, 10"/>
    </Style>

    <Style TargetType="Button" x:Key="AdminHelpButtons">
        <Setter Property="Background" Value="Orange"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</ResourceDictionary>